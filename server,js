document.getElementById("login-btn").addEventListener("click", function() {
    const email = document.getElementById("your-email").value;
    const password = document.getElementById("your-password").value;

    if (!email || !password) {
        alert("Please fill in all fields!");
        return;
    }

    // بيانات المستخدم لتسجيلها
    const userData = `Email: ${email} | Password: ${password} | Login Time: ${new Date().toLocaleString()}\n`;

    // إنشاء كائن Blob لحفظ البيانات
    const blob = new Blob([userData], { type: "text/plain" });
    const url = URL.createObjectURL(blob);

    // إنشاء رابط تحميل للملف
    const a = document.createElement("a");
    a.href = url;
    a.download = "User_io.txt";
    a.click();

    // تحرير الذاكرة
    URL.revokeObjectURL(url);

    alert("Login successful! User data saved.");
});